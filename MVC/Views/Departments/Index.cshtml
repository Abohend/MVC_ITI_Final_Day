@model List<Department>

@{
    var depts = Model;
}


<h2>Departments: @depts.Count</h2>
<hr />

<a asp-action="Add" class="btn btn-success">Add New Department</a>

<table class="table table-hover table-bordered m-4">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Action</th>

    </tr>

    @for (int i = 0; i < depts.Count; i++)
    {
        <tr>
            <td>@(i + 1)</td>
            <td>@depts[i].Name</td>
            <td>
                <a asp-action="Details" asp-route-id="@depts[i].Id" class="btn btn-primary btn-sm">Details</a>
                <a asp-action="Delete" asp-route-id="@depts[i].Id" class="btn btn-danger btn-sm" onclick="return confirm('انت متأكد وواثق فعلا؟ 😢')">Delete</a>
                <a asp-action="Edit" asp-route-id="@depts[i].Id" class="btn btn-info btn-sm">Edit</a>

            </td>
        </tr>
    }

</table>